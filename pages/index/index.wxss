/**index.wxss**/
.home{
  height: 100vh;
  width: 100%;
}
.header{
  top: 0;
  width: 100%;
  z-index: 10;

}
.list{
  height: calc(100vh - 425rpx);
  overflow: auto;
  position: relative;
  box-sizing: border-box;
  padding: 20rpx;
}
.cardlist{
  position: relative;
  overflow: hidden;
}
.cardlist .border{ 
  position: absolute;
  left: 10rpx;
  border-right:1px dashed #979797;
  width:1px;
  padding-top:100%; 
}
.news_card_box{
  margin-bottom: 50rpx;
}
.list-title{
  margin-bottom: 40rpx;
  font-size: 28rpx;
  color: #7B7B7B;
}
.list .list_box:last-child{
  border-left-color: #fff;
}
.point_box{
  position: absolute;
  left: -12rpx;
  top: -54rpx;
}
.mark {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height:100%;
  background: rgba(0,0,0,.5);
}
.child_list{
  border-radius: 20rpx;
  background: #fff;
}
.childtitle{
  height: 90rpx;
  font-size: 28rpx;
  color: #777777;
  line-height: 90rpx;
  padding-left: 40rpx;
  border-bottom:2rpx solid #F4F4F4;
}
.change-child {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 672rpx;
  border-radius: 10rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
}
.change-child-item {
  border-bottom: 1rpx solid #eeeeee;
  padding-top: 28rpx;
  padding-bottom: 28rpx;
}
.change-child-item:last-child {
  border-bottom: none;
}

.markinfo{
  text-align: center;
  height:278rpx;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  line-height: 278rpx;
  font-size: 36rpx;
  color: #777777;
  font-weight: bold;
  border-bottom: 2rpx solid #F1F1F1;

}
.btns{
  height:114rpx;
  background: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  display: flex;
  font-size: 36rpx;
  font-weight: bold;
}
.leftbtn{
  text-align: center;
  flex:1;
  border-right: 2rpx solid #F1F1F1;
  line-height: 114rpx;
}
.rightbtn{
  flex:1;
  text-align: center;
  line-height: 114rpx;
  color: #4EBA9A;
}

.cardchange-child {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  border-radius: 10rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  z-index: 101;
  width: 672rpx;
  height: 394rpx;
  border-radius: 20rpx;
  background: #fff;
}
.cardchild_list{
 text-align: center;
}
.cardimage{
  width: 308rpx;
  height: 208rpx;
  margin: 0 auto;
}
.subinfo{
  font-size: 36rpx;
  color: #777777;
  font-weight: bold;
  text-align: center;
  margin-top: 24rpx;
}
